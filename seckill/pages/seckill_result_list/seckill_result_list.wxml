<scroll-view scroll-y class="scrollPage">
    <view class="UCenter-bg">
        <image src="{{userAvatarUrl}}" class="png round" mode="widthFix"></image>
        <view class="text-xl margin-top text-black">{{userName}}</view>
        <image src="../../images/wave.gif" mode="scaleToFill" class="gif-wave"></image>
    </view>
    <view class="cu-list margin-top-xl margin-bottom-xl shadow-lg radius">
        <view wx:for="{{resultList}}" wx:key="id">
            <van-card custom-class="result-card shadow-warp" thumb-mode="aspectFill"
                      desc-class="text-cut" title-class="text-cut"
                      num="{{item.quantity}}"
                      price="{{item.financialProduct.price}}"
                      desc="{{item.seckillActivity.detail}}"
                      title="{{item.seckillActivity.name}}"
                      thumb="{{item.seckillActivity.image}}"
                      data-id="{{item.id}}">
                <view slot="price-top" style="text-align:right;">
                    ({{item.financialProduct.name}})
                </view>
            </van-card>
        </view>
        <view wx:if="{{resultList.length===0}}">
            <van-empty description="不存在成功秒杀订单"/>
        </view>
    </view>
    <view class="cu-tabbar-height"></view>
</scroll-view>


<view class="cu-bar tabbar bg-white bar-wrapper">
    <view class="action {{barIndex===0?'text-orange':'text-grey'}}" bind:tap="onProductListTab">
        <view class="cuIcon-homefill"></view>
        秒杀活动
    </view>

    <view class="action {{barIndex===1?'text-orange':'text-grey'}}" bind:tap="onSecKillListTab">
        <view class="cuIcon-my"></view>
        我的
    </view>
</view>
