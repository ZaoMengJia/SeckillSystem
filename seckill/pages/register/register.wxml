<!--pages/register/register.wxml-->
<cu-custom bgColor="bg-yellow" isBack="{{true}}">
    <view slot="backText" catch:tap="onRedirectIndex">首页</view>
    <view slot="content">注册</view>
</cu-custom>


<form>
    <view class="cu-card">
        <view class="cu-item shadow margin-top">
            <view class="cu-form-group">
                <view class="title">头像</view>
                <open-data class='cu-avatar radius bg-gray' type="userAvatarUrl"></open-data>
            </view>
            <view class="cu-form-group">
                <view class="title">昵称</view>
                <input class="text-right" value="{{nickName}}" placeholder="请输入昵称" bindinput="onChangeNickName"></input>
            </view>
            <view class="cu-form-group">
                <view class="title">真实姓名</view>
                <input class="text-right" value="{{realName}}" placeholder="请输入真实姓名" bindinput="onChangeRealName"></input>
            </view>
            <view class="cu-form-group">
                <view class="title">身份证号</view>
                <input class="text-right" value="{{idCard}}" placeholder="请输入身份证号" bindinput="onChangeIdCard" maxlength="18"></input>
            </view>
            <view class="cu-form-group">
                <van-radio-group value="{{gender}}" bind:change="onChangeGender" direction="horizontal">
                    <van-radio name="male">男</van-radio>
                    <van-radio name="female">女</van-radio>
                </van-radio-group>
            </view>
            <view class="cu-form-group">
                <van-cell custom-class="cellRootClass" class="cellClass" title="{{cellTitle}}" is-link position="bottom" bind:click="showPopup"/>
            </view>
        </view>
    </view>

</form>
<van-popup show="{{ show }}" position="bottom" bind:close="onClose" custom-style="height: 40%;width:100%;">
    <van-datetime-picker show-toolbar="{{false}}" type="date" value="{{ birthday }}" bind:input="onChangeDate" min-date="{{ minDate }}" formatter="{{formatter}}"/>
</van-popup>
<view>
    <view class="padding flex flex-direction">
        <button class="cu-btn bg-red margin-tb-sm lg" bind:tap="onSaveInfo">保存个人信息</button>
    </view>
</view>
<van-toast id="van-toast" />